@model PersonalAccounts
@{
    Layout = "_Layout"; ViewBag.Title = "Детализация лицевого счета";
}
<h2>Детализация лицевого счета<a asp-action="Index" class="btn btn-sm btn-secondary">Назад к списку</a></h2>
@if (Model != null)
{
    <h2>Лицевой счет</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
        <tr>
        <th>ИД</th>
        <th>ФИО</th>
        <th>Адрес</th>
        <th>Площадь, м^2</th>
        <th>Количество проживаюших</th>
        <th>Дата открытия</th>
        <th>Дата закрытия</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Client.ToString()</td>
                <td>@Model.Address.ToString()</td>
                <td>@Model.Square</td>
                <td>@Model.ResidentsNumber</td>
                <td>@Model.OpenDate </td>
                <td>@Model.CloseDate</td>
            </tr>
    </tbody>
    </table>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Назад к списку</a>
   <td><input type="button" class=" but_error" value="Закрыть счет" onclick="location.href='@Url.Action("ClosePersonalAccount",  new {Id=Model.Id})'" /></td>
}

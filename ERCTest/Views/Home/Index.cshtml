@model IEnumerable<PersonalAccounts>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Все лицевые счета</h2>
<a asp-action="AddPersonalAccount" class="btn btn-sm btn-primary">Добавить Лицевой счет</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
        <th>ИД</th>
        <th>ФИО</th>
        <th>Адрес</th>
        <th>Дата открытия</th>
        <th>Дата закрытия</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var account in Model)
        {            
            <tr>
                <td>@account.Id</td>
                <td>@account.Client.ToString()</td>
                <td>@account.Address.ToString()</td>
                <td>@account.OpenDate</td>
                <td>@account.CloseDate</td>
                <td><input type="button" class=" but_error" value="Подробнее" onclick="location.href='@Url.Action("PersonalAccountDetails",  new {Id=account.Id})'" /></td>
            </tr>
        }
    </tbody>
</table>
